#EditorConfig: http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.rb]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[Gemfile]
indent_style = space
indent_size = 4

[Dockerfile]
indent_style = space
indent_size = 4
